---
import { Icon } from 'astro-icon'
const { data, from } = Astro.props
// const arrow = (b:boolean)=>{
// 	return b ? <FaLongArrowAltLeft class='fa-icon' /> : <FaLongArrowAltRight class='fa-icon' />
// }
---

<ul>
	{
		data.map((d) => (
			<li class="grid grid-cols-[auto_60px_1fr_65px] ">
				<div>{from}</div>
				<div class="flex justify-center ">
					{' '}
					<Icon name="fa:arrow-left" class={`w-2 ${d.canGoBack ? '' : 'invisible'}`} />{' '}
					<Icon name="fa:arrow-right" class="w-2" />{' '}
				</div>
				{d.slug && <a href={`/acro/${d.slug}`}>{d.pose}</a>}
				{!d.slug && d.pose}
				{d.video && <a href={d.video}>video</a>}
			</li>
		))
	}
</ul>
